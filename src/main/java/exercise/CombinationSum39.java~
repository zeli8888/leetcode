package exercise;

import java.util.ArrayList;
import java.util.HashMap;
import java.util.LinkedList;
import java.util.List;

/**
 * @Author : Ze Li
 * @Date : 29/01/2025 10:16
 * @Version : V1.0
 * @Description :
 */
public class CombinationSum39 {
    public List<List<Integer>> combinationSum(int[] candidates, int target) {
        ArrayList<List<Integer>> ans = new ArrayList<>();
        helper(candidates, target, ans, new LinkedList<Integer>(), 0);
        return ans;
    }

    private void helper(int[] candidates, int target, List<List<Integer>> ans, LinkedList<Integer> curCandidates, int curSum){
        if (curSum == target){
            ans.add(new ArrayList<>(curCandidates));
            return;
        } else if (curSum > target) {
            return;
        }
        for (int candidate : candidates){
            curCandidates.add(candidate);
            helper(candidates, target, ans, curCandidates, curSum+candidate);
            curCandidates.removeLast();
        }
    }
}
