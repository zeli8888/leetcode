package exercise;

import java.util.PriorityQueue;

/**
 * @Author : Ze Li
 * @Date : 07/07/2025 17:10
 * @Version : V1.0
 * @Description :
 */
public class MinimumMovesToEqualArrayElements453 {
    class Solution {
        public int minMoves(int[] nums) {
            PriorityQueue<Integer> numsHeap = new PriorityQueue<>((a, b) -> b-a);
            int low = nums[0];
            for (int num : nums) {
                low = Math.min(num, low);
                numsHeap.add(num);
            }
            int ans = 0;
            while (numsHeap.peek() != low) {
                int val = numsHeap.poll();
                numsHeap.add(--val);
                ans++;
            }
            return ans;
        }
    }
}
